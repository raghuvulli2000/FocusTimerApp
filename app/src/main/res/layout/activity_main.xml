<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/gradient_bkg"
	tools:context=".MainActivity">

	<TextView
		android:id="@+id/Timer"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="00:00:00"
		android:textColor="@color/black"
		android:textSize="80dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.531" />

	<Button
		android:id="@+id/start"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:layout_marginTop="76dp"
		android:background="@drawable/gradient_btn"
		android:text="START"
		android:textColor="@color/black"
		app:cornerRadius="50dp"
		app:flow_horizontalAlign="center"
		app:icon="@drawable/ic_baseline_play_arrow_24"
		app:layout_constraintEnd_toStartOf="@+id/Reset"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/Timer" />

	<Button
		android:id="@+id/Reset"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:background="@drawable/simp_green_btn"
		android:text="RESET"
		android:textColor="@color/white"
		app:flow_horizontalAlign="center"
		app:icon="@drawable/ic_baseline_replay_24"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/start"
		app:layout_constraintTop_toBottomOf="@+id/Timer"
		android:visibility="gone"/>

	<com.google.android.material.floatingactionbutton.FloatingActionButton
		android:id="@+id/SetTime"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="16dp"
		android:backgroundTint="@color/pink_100"
		android:contentDescription="Set Time"
		android:src="@drawable/ic_baseline_more_time_24"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />



	<ImageView
		android:id="@+id/loco"
		android:layout_width="200dp"
		android:layout_height="200dp"
		app:layout_constraintBottom_toTopOf="@id/Timer"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.7"
		tools:background="@drawable/curl0001"/>



</androidx.constraintlayout.widget.ConstraintLayout>

